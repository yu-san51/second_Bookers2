<!DOCTYPE html>
<html>
  <head>
    <title>SecondBookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand">
              Bookers
            </div>
          </div>
          
          <div class="collapse navbar-collapse" id="navbarEexample7">
              <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                  <!--ログイン状態-->

                  <li><%= link_to " Home", user_path(current_user.id), class:"glyphicon glyphicon-home", aria_hidden:"true" %></li>
                  <li><%= link_to " Users", users_path, class:"glyphicon glyphicon-user", aria_hidden:"true" %></li>
                  <li><%= link_to " Books", "#", class: "glyphicon glyphicon-book", aria_hidden:"true" %></li>
                  <li><%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out", aria_hidden:"true" %></li>

                  <!--ログアウト状態-->
              <% else %>
                  <li><%= link_to " Home", "/", class:"glyphicon glyphicon-home", aria_hidden:"true" %></li>
                  <li><%= link_to " About", "home/about", class:"glyphicon glyphicon-link", aria_hidden:"true" %></li>
                  <li><%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit", aria_hidden:"true" %></li>
                  <li><%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in", aria_hidden:"true" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header><!-- /header -->

        <!--flash-->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
