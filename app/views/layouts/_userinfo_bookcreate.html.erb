			<!--createbook_error-->
<%= render 'layouts/error_messages', model: createbook %>

<div class="col-xs-3">
			<!--user info-->
	<h2>User info</h2>
	<table class="table">
		<tbody>
			<tr><%= attachment_image_tag user, :profile_image, size:"100x100", fallback: "no_image.jpg" %>
			</tr>
			<tr></tr>
			<tr>
				<th>name</th><th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th><th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<%= link_to "", edit_user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	</div>

			<!--book create-->
	<h2>New book</h2>
	<%= form_for createbook do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>
			<%= f.text_field :title, class:"col-xs-12" %>
		</div>
		<div class="field row">
			<label for="book_opinion">Opinion</label>
			<%= f.text_area :body, class:"col-xs-12" %>
		</div>
		<div class="actions row">
			<%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
		</div>
	<% end %>

</div><!--col-3-->