
<div class="container">
	
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>

		<div class="field">
			<label for="inputname">Name</label>
			<%= f.text_field :name, autofocus:true, class:"formcontrol" %>
		</div>

		<div class="field">
			<label>Profile Image</label>
			<%= f.attachment_field :profile_image %>
		</div>

		<div class="field">
			<label for="inputintroduction">Introduction</label>
			<%= f.text_area :introduction, autofocus:true, class:"formcontrol" %>
		</div>

		<div class="field">
			<%= f.submit "Update User" %>
		</div>
		
	<% end %>
</div>