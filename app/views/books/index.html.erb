<div class="container">
	<div class="row">
		<!--info.create-->

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colsoan="3"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @books.each do |book| %>
							<td><%= link_to user_path(book.user.id) do %>
									<%= attachment_image_tag, book.user, :profile_image size:"40x40", fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td><%= link_to "#{book.title}", book_path(book.id) %></td>
							<td><%= book.body %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>